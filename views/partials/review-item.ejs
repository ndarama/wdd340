<div class="review-item">
  <div class="review-header">
    <div class="review-author">
      <strong><%= review.account_firstname %> <%= review.account_lastname %></strong>
    </div>
    <div class="review-date">
      <%= new Date(review.review_date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
    </div>
    <div class="review-rating">
      <% for(let i = 1; i <= 5; i++) { %>
        <% if (i <= review.review_rating) { %>
          <span class="star filled">★</span>
        <% } else { %>
          <span class="star">☆</span>
        <% } %>
      <% } %>
    </div>
  </div>
  <div class="review-content">
    <p><%= review.review_text %></p>
  </div>
  <% if (locals.accountData && locals.accountData.account_id === review.account_id) { %>
    <div class="review-actions">
      <a href="/reviews/edit/<%= review.review_id %>" class="btn-review-action">Edit</a>
      <a href="/reviews/delete/<%= review.review_id %>" class="btn-review-action delete">Delete</a>
    </div>
  <% } %>
</div>